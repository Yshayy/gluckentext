<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"/>
        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button2" android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true" android:layout_alignParentRight="true">
                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Button"
                                android:id="@+id/button3"/>
                        <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Button"
                                android:id="@+id/button4"/>
                        <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Button"
                                android:id="@+id/button5"/>
                </TableRow>
                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Button"
                                android:id="@+id/button6"/>
                </TableRow>
        </TableLayout>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/webView" android:layout_below="@+id/button"
                android:layout_above="@+id/button2" android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"/>
</RelativeLayout>